<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Operation">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="409dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#FF0000">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:text="OPERATIONS" />
                <ImageView
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_exit"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/createvendor"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:background="#FF0000"
                android:layout_marginTop="25dp"
                android:elevation="120dp"
                android:text="Create Vendor"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/createenterprise"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="40dp"
                android:elevation="120dp"
                android:background="#FF0000"
                android:textColor="#FFFFFF"
                android:text="Create Enterprise" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:id="@+id/createmenu"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#FF0000"
            android:layout_marginTop="30dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Create Menu" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:id="@+id/covid"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#FF0000"
            android:layout_marginTop="13dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Covid Hygenic Check" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#FF0000"
            android:layout_marginTop="13dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Manage Order" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:id="@+id/menuchangerequestcw"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#FF0000"
            android:layout_marginTop="13dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Menu Change Request" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:id="@+id/cancelrequestcw"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#FF0000"
            android:layout_marginTop="13dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="Cancel Order Request" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>